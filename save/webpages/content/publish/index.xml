<?xml version="1.0" encoding="UTF-8"?>

<MyCoReWebPage>
  <section title="Publizieren" xml:lang="de">
    <form id="submit_publication"
          class="form-horizontal" 
          role="form" 
          method="get"
          action="../../editor/editor-admins.xed">

      <h1>Dokument einreichen</h1>

        <div class="row form-group">
          <div class="col-md-2 pr-0 control-label">
            <select name="type" class="form-control">
              <option value="doi">DOI</option>
              <option value="isbn">ISBN</option>
              <option value="ppn">K10plus-PPN</option>
              <option value="scopus">Scopus-ID</option>
              <option value="ieee">IEEE-ID</option>
              <option value="issn">ISSN</option>
              <option value="zdbid">ZDB-ID</option>
            </select>
          </div>
          <div class="col-md-4 pl-0">
            <input class="form-control" type="text" name="modsId" />
          </div>
        </div>
      <div class="row form-group">
        <div class="col-md-6">
          <button type="submit" class="btn btn-primary">Weiter</button>
        </div>
      </div>

    </form>
  </section>

  <section title="Publish" xml:lang="en">
    <form id="submit_publication"
          class="form-horizontal" 
          role="form" 
          method="get"
          action="../../editor/editor-admins.xed">

      <h1>Submit document</h1>

        <div class="row form-group">
          <div class="col-md-2 pr-0 control-label">
            <select name="type" class="form-control">
              <option value="doi">DOI</option>
              <option value="isbn">ISBN</option>
              <option value="ppn">K10plus-PPN</option>
              <option value="scopus">Scopus-ID</option>
              <option value="ieee">IEEE-ID</option>
              <option value="issn">ISSN</option>
              <option value="zdbid">ZDB-ID</option>
            </select>
          </div>
          <div class="col-md-4 pl-0">
            <input class="form-control" type="text" name="modsId" />
          </div>
        </div>
      <div class="row form-group">
        <div class="col-md-6">
          <button type="submit" class="btn btn-primary">Next</button>
        </div>
      </div>

    </form>
  </section>

</MyCoReWebPage>
